{
    "name": "{{ location.name|escapejs }}",
    "open": {{ location.open|lower }},
    "modified": "{{ location.last_modified|date:"U" }}",
    "uid": "{{ location.uid }}",
    "categories": [{% for category in location.category_set.all %}{
        "name": "{{ category.name|escapejs }}",
        "contents_hot": {{ category.contents_hot|lower }},
        "modified": "{{ category.last_modified|date:"U" }}",
        "uid": "{{ category.uid }}",
        "items": [{% for item in category.item_set.all %}{
            "name": "{{ item.name|escapejs }}",
            "quantity": "{% if item.quantity %}{{ item.quantity }}{% endif %}",
            "status": "{{ item.status }}",
            "modified": "{{ item.last_modified|date:"U" }}",
            "uid": "{{ item.uid }}"
        }{% if not forloop.last %},
        {% endif %}{% endfor %}]
    }{% if not forloop.last %},
    {% endif %}{% endfor %}]
}
